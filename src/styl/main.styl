.logo 
    color: rgba(255,255,255,.6)
    float: none
    display: inline-block
    width: 180px
    height: 76px
    background-size: 180px 76px
	svg 
		fill: #ffffff
		
.cb-alert.cb-alert-success
	background-color: #4ACC66 !important
	
.cb-button.active
	color: #fff;
	background-color: #EC3E3E
	
.cb-button 
	font-family $font-serif
	font-weight 600
	letter-spacing .15em
	text-transform uppercase
	border-radius 3px
	font-size 1em
	
label 
	font-size 1.125em
	margin .5em 0
	display block
	font-family $font-serif
	
	
	 